<div class='flex flex-col gap-3 prose w-full'>
  <h2 class='text-white'>Send me a message</h2>
  <form class='flex flex-col gap-3'>
    <input
      type='text'
      placeholder='Name'
      class='p-2 text-white outline-none text-xl rounded-md bg-[rgba(255,255,255,0.3)]'
    />
    <input
      type='email'
      placeholder='Email'
      class='p-2 text-white outline-none text-xl rounded-md bg-[rgba(255,255,255,0.3)]'
    />
    <input
      type='text'
      placeholder='Subject'
      class='p-2 text-white outline-none text-xl rounded-md bg-[rgba(255,255,255,0.3)]'
    />
    <textarea
      placeholder='Your message'
      class='p-2 text-white outline-none text-xl rounded-md bg-[rgba(255,255,255,0.3)]'
    ></textarea>
    <button
      type='button'
      class='text-white bg-gradient-to-br from-[#C961DE] to-[#2F2F8A] hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2'
      >Send message</button
    >
  </form>
</div>
